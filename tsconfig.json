{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2018",
    "lib": [
      "es2018"
    ],
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "pretty": true,
    "importHelpers": true,
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noImplicitReturns": true
  },
  "include": [
    "./src/**/*"
  ]
}
